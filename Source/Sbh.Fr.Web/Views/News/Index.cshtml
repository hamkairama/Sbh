@model IEnumerable<Sbh.Fr.Model.SBH_TM_NEWS>
@using Sbh.Fr.CommonFunction

@{
    ViewBag.Title = "Index News";
    ViewBag.ActiveMaintenance = "active";
    ViewBag.ActiveNews = "active";
    ViewBag.BreadCrumbMenu = "Maintenance";
    ViewBag.BreadCrumbSubMenu = "News";
    ViewBag.BreadCrumbSubSubMenu = "Index";
}

@if (ViewBag.msgSuccess != null)
{
    <div class="alert alert-success">
        <a href="#" class="close" type="button" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </a>

        <strong>
            <i class="ace-icon fa fa-check"></i>
        </strong>
        @ViewBag.msgSuccess
        <br>
    </div>
}

@if (ViewBag.msgError != null)
{
    <div class="alert alert-danger">
        <a href="#" class="close" type="button" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </a>
        <strong>
            <i class="ace-icon fa fa-times"></i>
        </strong>
        @ViewBag.msgError
        <br>
    </div>
}

<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <a class="btn btn-success" tabindex="0" aria-controls="sample_3" href="@Url.Action("Create")" title="Create">
                <span>Create</span>
            </a>
        </div>
        <div class="actions">
            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                <i class="icon-cloud-upload"></i>
            </a>
            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                <i class="icon-wrench"></i>
            </a>
            <a class="btn btn-circle btn-icon-only btn-warning" href="javascript:;">
                <i class="icon-trash"></i>
            </a>
        </div>
    </div>
    <div class="portlet-body table-scrollable">
        <table class="table table-striped table-bordered table-hover dt-responsive dataTable no-footer dtr-inline collapsed" width="100%" id="dynamic-table" cellspacing="0" role="grid" aria-describedby="sample_3_info" style="width: 100%;">
            <thead>
                <tr role="row">
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Template
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr role="row" class="odd">
                        <td>
                            @item.TITLE
                        </td>
                        <td>
                            <p class="overflow-ellipsis">@item.DESCRIPTION</p>
                        </td>
                        <td>
                            <p class="overflow-ellipsis">@item.SBH_TM_CATEGORY.CATEGORY_NAME</p>
                        </td>
                        <td>
                            <p class="overflow-ellipsis">@item.TEMPLATE</p>
                        </td>
                        <td style="text-align:center">
                            <a onclick="Modal('/News/Delete/','@item.ID','#myModal')" href="#" class="btn btn-xs btn-danger btn-circle-left">
                                <i class="icon-trash"></i>
                                <span style="color:white">Delete</span>
                            </a>
                            <a onclick="Modal('/News/Detail/','@item.ID','#myModal')" href="#" class="btn btn-xs btn-default btn-circle-right">
                                <i class="icon-plus"></i>
                                <span style="color:grey">Detail</span>
                            </a>
                            <a onclick="Modal('/News/Edit/','@item.ID','#myModal')" href="#" class="btn btn-xs btn-success btn-circle-right">
                                <i class="icon-pencil"></i>
                                <span style="color:black">Edit</span>
                            </a> 

                        
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


