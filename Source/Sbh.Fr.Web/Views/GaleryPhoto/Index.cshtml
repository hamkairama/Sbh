@model IEnumerable<Sbh.Fr.Model.SBH_TM_GALERY_FOTO>
@using Sbh.Fr.CommonFunction

@{
    ViewBag.Title = "Index Galery";
    ViewBag.ActiveMore = "active";
    ViewBag.ActiveMyListEvent = "active";
    ViewBag.BreadCrumbMenu = "More";
    ViewBag.BreadCrumbSubMenu = "My List Event";
    ViewBag.BreadCrumbSubSubMenu = "Index";
}

@if (ViewBag.msgSuccess != null)
{
    <div class="alert alert-success">
        <a href="#" class="close" type="button" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </a>

        <strong>
            <i class="ace-icon fa fa-check"></i>
        </strong>
        @ViewBag.msgSuccess
        <br>
    </div>
}

@if (ViewBag.msgError != null)
{
    <div class="alert alert-danger">
        <a href="#" class="close" type="button" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </a>
        <strong>
            <i class="ace-icon fa fa-times"></i>
        </strong>
        @ViewBag.msgError
        <br>
    </div>
}

