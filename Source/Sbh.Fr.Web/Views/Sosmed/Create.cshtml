@model Sbh.Fr.Model.Master.SBH_TM_SOSMED
@{
    ViewBag.Title = "Create Sosmed";
    ViewBag.ActiveMaintenance = "active";
    ViewBag.ActiveSosmed = "active";
    ViewBag.BreadCrumbMenu = "Maintenance";
    ViewBag.BreadCrumbSubMenu = "Sosmed";
    ViewBag.BreadCrumbSubSubMenu = "Create";
}

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("ActionCreate", "Sosmed", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Type</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TYPE, (IEnumerable<SelectListItem>)ViewBag.GetTypeSosmedList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NAME, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Description</label>
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.DESCRIPTION, new { @class = "form-control tinymce", @style = "width:300px" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Icon</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ICON, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Url</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.URL, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Data embed</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DATA_EMBED, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Height</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HEIGHT, new { @class = "form-control", @type = "number" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Width</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.WIDTH, new { @class = "form-control", @type = "number" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Widget Id</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DATA_WIDGET_ID, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Banner Selected</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.BANNER_SELECTED, (IEnumerable<SelectListItem>)ViewBag.GetTrueFalse, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Image</label>
        <div class="col-md-10">
            <div>
                <img id="txtImage" src="data:image/png;base64," class="img-medium" style="display:none" />
                <input type="file" id="postedFile" name="postedFile" style="display:none" />
            </div>
            <div style="float:left">
                <a href="#" id="btnBrowse" onclick="GetFile()" class="btn btn-sm btn-white btn-default btn-round">Browse</a>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>    
}

