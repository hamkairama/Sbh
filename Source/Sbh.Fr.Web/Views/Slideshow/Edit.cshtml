@model Sbh.Fr.Model.SBH_TM_SLIDESHOW
@{
    ViewBag.Title = "Edit Slideshow";
    ViewBag.ActiveMaintenance = "active";
    ViewBag.ActiveSlideshow = "active";
    ViewBag.BreadCrumbMenu = "Maintenance";
    ViewBag.BreadCrumbSubMenu = "Slideshow";
    ViewBag.BreadCrumbSubSubMenu = "Edit";

    Model.CONTENT_DESCRIPTION = HttpUtility.HtmlDecode(Model.CONTENT_DESCRIPTION);

}

<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("ActionEdit", "Slideshow", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.TITTLE</h4>
            </div>
            <div class="modal-body">
                <div>
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            <label class="col-md-2 control-label">Title</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TITTLE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TITTLE, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Content</label>
                            <div class="col-md-10">
                                <textarea class="form-control tinymce" style="width:300px" name="CONTENT_DESCRIPTION" id="CONTENT_DESCRIPTION">
                                    @Html.Raw(Model.CONTENT_DESCRIPTION)
                                </textarea>
                                @Html.ValidationMessageFor(model => model.CONTENT_DESCRIPTION, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Class Item</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.CLASS, (IEnumerable<SelectListItem>)ViewBag.GetClassActiveList, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Url</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group hidden">
                            <label class="col-md-2 control-label">Image</label>
                            <div class="col-md-10">
                                <div>
                                    <img id="txtImage" src="@Model.PHOTO_PATH" class="img-medium" />
                                    <input type="file" id="postedFile" name="postedFile" style="display:none" />
                                </div>
                                <div style="float:left">
                                    <a href="#" id="btnBrowse" onclick="GetFile()" class="btn btn-sm btn-white btn-default btn-round">Browse</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("ActionEdit", "Slideshow", new { id = Model.ID }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Edit" class="btn btn-default" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
}


<script src="~/Content/tinymce/tinymce/tinymce.min.js"></script>
<script src="~/Content/tinymce/tinymce/tinymce.custom.persada.js"></script>