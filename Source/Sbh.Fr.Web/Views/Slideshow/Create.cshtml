@model Sbh.Fr.Model.SBH_TM_SLIDESHOW
@{
    ViewBag.Title = "Create Slideshow";
    ViewBag.ActiveMaintenance = "active";
    ViewBag.ActiveSlideshow = "active";
    ViewBag.BreadCrumbMenu = "Maintenance";
    ViewBag.BreadCrumbSubMenu = "Slideshow";
    ViewBag.BreadCrumbSubSubMenu = "Create";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ActionCreate", "Slideshow", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Title</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TITTLE, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Content (add image click <i class="icon-plus"></i>)</label>
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.CONTENT_DESCRIPTION, new { @class = "form-control tinymce", @style = "width:300px" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Class Item</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.CLASS, (IEnumerable<SelectListItem>)ViewBag.GetClassActiveList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Url</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.URL, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group hidden">
        <label class="col-md-2 control-label">Image</label>
        <div class="col-md-10">
            <div>
                <img id="txtImage" src="data:image/png;base64," class="img-medium" style="display:none" />
                <input type="file" id="postedFile" name="postedFile" style="display:none" />
            </div>
            <div style="float:left">
                <a href="#" id="btnBrowse" onclick="GetFile()" class="btn btn-sm btn-white btn-default btn-round">Browse</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Slideshow Description</label>
        <div class="col-md-10">
            <input type='text' class="form-control" id='datetimepicker4' />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>    
}

